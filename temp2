const Hashids = require('hashids');

const hashids = new Hashids("b84e2ccbb7701d7205c949cffd0dc4096d5fbe1e458dfdb7b431ed52b6f7b185", 12); // Min length 12

function encryptObjectId(objectId) {
    return hashids.encodeHex(objectId);
}

function decryptObjectId(shortId) {
    return hashids.decodeHex(shortId);
}

// Example Usage
const objectId = "507f191e810c19729de860ea";
const encrypted = encryptObjectId(objectId);
console.log("Encrypted:", encrypted);  // ~12 chars

const decrypted = decryptObjectId(encrypted);
console.log("Decrypted:", decrypted);
